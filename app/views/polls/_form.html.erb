<%= form_with(model: poll) do |form| %>
  <% if poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
        <% poll.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :timeframe_start %>
  </div>
  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_field :timeframe_end %>
  </div>
  <div class="field">
    <%= form.label :poll_daily_start %>
    <%= form.time_select :daily_start, ampm: true, discard_minute: true, ignore_date: true, default: {hour: 0}%>
  </div>

    <div class="field">
    <%= form.label :poll_daily_end %>
    <%= form.time_select :daily_end, ampm: true, discard_minute: true, ignore_date: true, default: {hour: 23}%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
