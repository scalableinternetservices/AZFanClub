<%= form_with(model: poll) do |form| %>
  <% if poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
        <% poll.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :timeframe_start %>
    <%= form.text_field :timeframe_start %>
  </div>
<!--  <div class="field">-->
    <%#= form.label :timeframe_end %>
    <%#= form.text_field :timeframe_end %>
<!--  </div>-->
  <div class="field">
    <%= form.label :timeframe_end %>
    <%= form.text_field :timeframe_end, data:{ provide:'datepicker' } %>
  </div>

  <a data-js-hide-link="true" href="">Hide</a>
  <script>
      window.onload = function() {
          if (window.jQuery) {
              // jQuery is loaded
              alert("Yeah!");
              console.log("Yeah");
          } else {
              // jQuery is not loaded
              alert("Doesn't Work");
          }
      }

      $(document).ready(function() {
          $('[data-js-hide-link]').click(function(event){
              alert('You clicked the Hide link');
              event.preventDefault();
          });
      });
  </script>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
